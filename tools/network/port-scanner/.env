# Port Scanner Tool Default Configuration
# These environment variables can be overridden by:
# 1. Global config in data/.env using PORT_SCANNER_* prefix
# 2. System environment variables

# Scanning settings
TIMEOUT=5
MAX_THREADS=100
DEFAULT_PORTS=22,23,25,53,80,110,443,993,995

# TCP/UDP settings
SCAN_TCP=true
SCAN_UDP=false
UDP_TIMEOUT=3

# Output settings
VERBOSE=false
SHOW_CLOSED_PORTS=false
OUTPUT_FORMAT=text
SAVE_RESULTS=false

# Performance settings
CONNECT_TIMEOUT=3
MAX_CONCURRENT_HOSTS=10
THREAD_POOL_SIZE=50

# Advanced settings
USE_NMAP=false
NMAP_OPTIONS=-sS
SERVICE_DETECTION=false