# S3 Sync Tool Configuration

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
# Note: Do not set AWS credentials here
# Use AWS CLI (aws configure) or environment variables instead

# Sync Behavior
DELETE_REMOVED=false
VERIFY_CHECKSUMS=true
DRY_RUN=false

# Performance Settings  
PARALLEL_UPLOADS=4
MULTIPART_THRESHOLD=67108864    # 64MB in bytes
MULTIPART_CHUNKSIZE=8388608     # 8MB in bytes
MAX_RETRIES=3
TIMEOUT=300

# Storage Settings
DEFAULT_STORAGE_CLASS=STANDARD
ENCRYPTION_ENABLED=false

# Logging
DEBUG=false