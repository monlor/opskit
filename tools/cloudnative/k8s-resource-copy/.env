# Kubernetes Resource Copy Tool Configuration

# Temporary file management
TEMP_DIR_CLEANUP=true

# Batch operation settings
MAX_RESOURCES_PER_BATCH=50
CONFIRMATION_TIMEOUT=300
DRY_RUN_DEFAULT=true

# Resource relationship detection
DEFAULT_RELATIONSHIP_LABELS=app,service,component,name
AUTO_DISCOVER_RELATIONSHIPS=true
INCLUDE_SECRETS=true
INCLUDE_CONFIGMAPS=true

# kubectl settings
CONTEXT_SWITCH_TIMEOUT=30
NEAT_PLUGIN_REQUIRED=false
VALIDATE_CLUSTER_ACCESS=true

# Output settings
SHOW_RESOURCE_DIFF=true
EXPORT_FORMAT=yaml
PRESERVE_COMMENTS=false

# Resource cleaning settings
REMOVE_CLUSTER_IP=true
REMOVE_NODE_PORT=true

# UI settings
INTERACTIVE_MODE=true
SHOW_PROGRESS=true
COLOR_OUTPUT=true