# System Info Tool Default Configuration
# These environment variables can be overridden by:
# 1. Global config in data/.env using SYSTEM_INFO_* prefix
# 2. System environment variables

# Display settings
SHOW_HARDWARE=true
SHOW_NETWORK=true
SHOW_PROCESSES=false
SHOW_DETAILED_CPU=true
SHOW_MEMORY_DETAILS=true

# Format settings
OUTPUT_FORMAT=table
USE_COLORS=true
HUMAN_READABLE=true
INCLUDE_TIMESTAMPS=true

# Collection settings
COLLECT_UPTIME=true
COLLECT_LOAD_AVERAGE=true
COLLECT_DISK_USAGE=true
COLLECT_NETWORK_INTERFACES=true
COLLECT_RUNNING_SERVICES=false

# Performance settings
TIMEOUT=10
MAX_PROCESS_COUNT=20
REFRESH_INTERVAL=5

# Advanced settings
SHOW_KERNEL_INFO=true
SHOW_INSTALLED_PACKAGES=false
EXPORT_JSON=false
INCLUDE_SECURITY_INFO=false