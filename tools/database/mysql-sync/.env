# MySQL Sync Tool Default Configuration
# These environment variables can be overridden by:
# 1. Global config in data/.env using MYSQL_SYNC_* prefix
# 2. System environment variables

# Connection settings
TIMEOUT=30
MAX_RETRIES=3
CONNECT_TIMEOUT=30

# Batch operation settings  
BATCH_SIZE=100
CONFIRM_DESTRUCTIVE=true
SHOW_PROGRESS=true

# MySQL dump settings
SINGLE_TRANSACTION=true
INCLUDE_ROUTINES=true
INCLUDE_TRIGGERS=true
LOCK_TABLES=false

# Logging settings
DEBUG=false
VERBOSE=false
LOG_QUERIES=false

# Cache settings
CACHE_CONNECTIONS=true
MAX_HISTORY_RECORDS=50

# Performance settings
MAX_CONCURRENT_SYNCS=1
COMPRESSION_LEVEL=6